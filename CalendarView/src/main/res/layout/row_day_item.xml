<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:background="@drawable/item_bg_rounded"
    android:layout_height="80dp"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="2dp"
    android:layout_marginStart="2dp"
    android:layout_marginTop="4dp"
    android:layout_width="50dp"
    android:paddingEnd="8dp"
    android:paddingStart="8dp"
    tools:backgroundTint="@color/blue"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/dayName_tv"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:maxLength="3"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Wed"
        tools:textColor="@color/white" />

    <TextView
        android:id="@+id/dayNumber_tv"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:maxLength="2"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dayName_tv"
        tools:text="10"
        tools:textColor="@color/white" />

    <View
        android:background="@drawable/item_bg_circle"
        android:id="@+id/dayIsCurrent_view"
        android:layout_height="6dp"
        android:layout_marginBottom="2dp"
        android:layout_width="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dayNumber_tv"
        tools:backgroundTint="@color/white" />
</androidx.constraintlayout.widget.ConstraintLayout>